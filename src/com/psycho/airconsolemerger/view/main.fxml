<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.psycho.airconsolemerger.view.MainController">
   <children>
      <Button fx:id="_selectScreenSourceButton" layoutX="232.0" layoutY="50.0" mnemonicParsing="false" onAction="#onSelectScreenSources" text="Select screen directory" />
      <Button fx:id="_selectControllerSourceButton" layoutX="224.0" layoutY="140.0" mnemonicParsing="false" onAction="#onSelectControllerSources" text="Select controller directory" />
      <Button fx:id="_selectDestinationButton" layoutX="220.0" layoutY="230.0" mnemonicParsing="false" onAction="#onSelectDestination" text="Select destination directory" />
      <Button fx:id="_mergeButton" layoutX="206.0" layoutY="340.0" mnemonicParsing="false" onAction="#onMerge" prefHeight="25.0" prefWidth="188.0" text="Merge!">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="_screenSources" editable="false" layoutX="26.0" layoutY="85.0" mouseTransparent="true" prefHeight="25.0" prefWidth="548.0" promptText="Screen root directory" />
      <TextField fx:id="_controllerSources" editable="false" layoutX="26.0" layoutY="175.0" mouseTransparent="true" prefHeight="25.0" prefWidth="548.0" promptText="Controller root directory" />
      <TextField fx:id="_destinationFolder" editable="false" layoutX="26.0" layoutY="265.0" mouseTransparent="true" prefHeight="25.0" prefWidth="548.0" promptText="Project destination directory" />
      <CheckBox fx:id="_deleteIndexFileCheckBox" layoutX="25.0" layoutY="315.0" mnemonicParsing="false" onAction="#onToggleDelete" selected="true" text="Delete unused index files" />
      <CheckBox fx:id="_zipResultCheckBox" layoutX="25.0" layoutY="345.0" mnemonicParsing="false" onAction="#onToggleZip" text="Zip project" />
      <Text layoutX="418.0" layoutY="390.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Psychokiller1888 - Sick Rabbit Studios">
         <font>
            <Font size="10.0" />
         </font>
      </Text>
      <Text fx:id="_checkNewVersionLink" layoutX="16.0" layoutY="390.0" onMouseClicked="#onClickLink" strokeType="OUTSIDE" strokeWidth="0.0" text="Check for new version">
         <font>
            <Font size="10.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
   </children>
</AnchorPane>
